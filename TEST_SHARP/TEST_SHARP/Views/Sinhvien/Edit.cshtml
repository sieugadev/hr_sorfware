@model TEST_SHARP.Models.SinhVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 class="text-center text-primary"> Sửa Thông Tin Sinh Viên</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_sv)

        <div class="form-group">

           <label class="col-md-2">Họ Và Tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hoten_sv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hoten_sv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Địa Chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.diachi_sv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diachi_sv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">giới Tính</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.gioitinh_sv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gioitinh_sv, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Số Điện Thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.sdt_sv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt_sv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhập" class="form-control btn btn-primary" />
            </div>
        </div>
   </div> 
}

<div>
    @Html.ActionLink("Quay lại trang chủ", "Index" )
</div>
